<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="console" 
			class="ch.qos.logback.core.ConsoleAppender">
			<encoder>
				<pattern>%msg%n</pattern>
			</encoder>
	</appender>
	<logger name="com.biz" level="DEBUG" additivity="false">
		<appender-ref ref="console"/>
	</logger>

	<root level="WARN">
		<appender-ref ref="console"/>
	</root>
</configuration>